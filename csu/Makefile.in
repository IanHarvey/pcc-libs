# top-level Makefile
#

prefix = @prefix@
exec_prefix = @exec_prefix@
libdir = @libdir@

TARGOS = @targos@
TARGMACH = @targmach@
TARGET = @target@
VERSION = @version@
PCCLIBDIR = $(libdir)/pcc/$(TARGET)/$(VERSION)/lib

CC = @CC@
CFLAGS = @CFLAGS@

MFLAGS += CC=$(CC) MACH=$(TARGMACH) PCCLIBDIR=$(PCCLIBDIR)

all clean install:
	if test -d $(TARGOS) ; then cd $(TARGOS) && $(MAKE) $(MFLAGS) $@; fi

distclean: clean
	/bin/rm -f Makefile
